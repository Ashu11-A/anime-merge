    "@fastify/multipart": "^8.3.0",
    "@fastify/passport": "2.5.0",
    "@fastify/session": "10.9.0",
    "@fastify/static": "7.0.4",
    "@fastify/websocket": "^10.0.1",
    "@tanstack/react-table": "^8.20.6",
    "@types/mysql": "^2.15.26",
    "@types/sql.js": "^1.4.9",
    "anilist": "workspace:../packages/anilist",
    "bcrypt": "^5.1.1",
