    "@types/glob": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.3",
    "globals": "^15.14.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@fastify/cookie": "9.4.0",
    "@fastify/cors": "9.0.1",
